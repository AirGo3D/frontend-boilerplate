{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./src/",
    "outDir": "./build/",
    "sourceMap": true
  },
  "include": ["src"]
}